<h3>
  Course Details
  <% if can? :edit, @course %>
  <span class="pull-right"><small><%= link_to '<span class="glyphicon glyphicon-pencil"></span>'.html_safe, edit_course_path(@course.id), { :class => 'btn btn-sm btn-default', :title => "Edit" } %></small></span>
  <% end %>
</h3>
<hr>

<form class="form-horizontal">
  <div class="form-group">
    <label class="col-md-2 control-label">Code</label>
    <div class="col-md-10">
      <p class="form-control-static"><%= @course.code %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-2 control-label">Title</label>
    <div class="col-md-10">
      <p class="form-control-static"><%= @course.title %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-2 control-label">Duration</label>
    <div class="col-md-10">
      <p class="form-control-static"><%= @course.duration_human %></p>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 control-label">Candidates</label>
    <div class="col-md-10">
      <p class="form-control-static">Min: <%= @course.min_candidate %>; Max: <%= @course.max_candidate %></p>
    </div>
  </div>
</form>

<h3>
  Course Events
  <% if can? :create, Course::Event %>
  <span class="pull-right"><small><%= link_to '<span class="glyphicon glyphicon-plus"></span>'.html_safe, new_course_event_path(@course.id), { :class => 'btn btn-sm btn-default', :title => "New" } %></small></span>
  <% end %>
</h3>
<hr>
<%= render :partial => "/course/events/list", :locals => {:e => @course.course_events} %>
