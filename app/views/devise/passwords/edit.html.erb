<h3>Reset Password</h3>
<hr>
<%= form_for(resource, :as => resource_name, :html => { :class => "form form-horizontal", :role => "form", :method => :put }, :url => password_path(resource_name)) do |f| %>
  <% if resource.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <%= pluralize(resource.errors.count, "error") %> prohibited this person from being created:
      </div>
      <div class="panel-body">
        <ul style="margin-bottom: 0;">
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, { :class => "col-md-2 control-label" } %>
    <div class="col-md-5">
      <%= f.password_field :password, { :autofocus => true, :class => "form-control" } %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'Repeat password', { :class => "col-md-2 control-label" } %>
    <div class="col-md-5">
      <%= f.password_field :password_confirmation, { :class => "form-control" } %>
    </div>
  </div>

  <div class="form-group">
  	<div class="col-md-5 col-md-offset-2">
  		<%= f.submit "Submit", :class => "btn btn-default" %>
  	</div>
	</div>

	<div class="form-group">
  	<div class="col-md-5 col-md-offset-2">
  		<%= render "devise/shared/links" %>
  	</div>
  </div>
<% end %>
