<h3>Login</h3>
<hr>
<%= devise_error_messages! %>
<%= form_for(resource, :as => resource_name, :html => { :class => "form form-horizontal", :role => "form", :method => :post }, :url => session_path(resource_name)) do |f| %>
	
	<div class="form-group">
	  <%= f.label :email, { :class => "col-md-2 control-label" } %>
	  <div class="col-md-5">
	    <%= f.text_field :email, { :autofocus => true, :class => "form-control" } %>
	  </div>
	</div>

	<div class="form-group">
	  <%= f.label :password, { :class => "col-md-2 control-label" } %>
	  <div class="col-md-5">
	    <%= f.password_field :password, { :class => "form-control" } %>
	  </div>
	</div>
  <% if devise_mapping.rememberable? -%>
		<div class="form-group">
		  <div class="col-md-5 col-md-offset-2">
		  	<div class="checkbox">
		  		<label>
		    		<%= f.check_box :remember_me %>
		    		<%= f.label :remember_me %>
		    	</label>
		  	</div>
		  </div>
		</div>
  <% end -%>

  <div class="form-group">
  	<div class="col-md-5 col-md-offset-2">
  		<%= f.submit "Login", :class => "btn btn-default" %>
  	</div>
	</div>
	<div class="form-group">
		<div class="col-md-5 col-md-offset-2">
			<%= render "devise/shared/links" %>
		</div>
	</div>
<% end %>

